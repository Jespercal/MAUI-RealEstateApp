<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:RealEstateApp.ViewModels"
             x:DataType="viewmodels:LoginViewModel"
             x:Class="RealEstateApp.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout>
        <Frame BackgroundColor="Red" IsVisible="{Binding Message, Converter={StaticResource stringBoolConverter}}">
            <Label Text="{Binding Message}" TextColor="Black" />
        </Frame>
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}" />
        <Button Command="{Binding LoginCommand}" Text="Login" />
    </VerticalStackLayout>
</ContentPage>
